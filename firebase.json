{
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"hosting": {
		"predeploy": "yarn export",
		"public": "out",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [{ "source": "/", "destination": "/2022gw/bg" }],
		"headers": [
			{
				"source": "/sw.js",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "no-cache"
					}
				]
			},
			{
				"source": "/manifest.json",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "no-cache"
					}
				]
			},
			{
				"source": "/static/**/*.@(png|jpeg|jpg)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=31536000"
					}
				]
			}
		],
		"cleanUrls": true
	},
	"functions": {
		"source": "functions",
		"predeploy": "npm --prefix functions run build",
		"ignore": [
			"firebase.json",
			"firebase-debug.log",
			"**/.*",
			"**/node_modules/**",
			"src/**",
			"tsconfig.json",
			"public/**",
			"package*",
			"firestore.rules"
		]
	}
}
