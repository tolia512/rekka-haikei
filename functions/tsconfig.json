{
	"compilerOptions": {
		"esModuleInterop": true,
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"typeRoots": ["./functions/node_modules/@types"],
		"skipLibCheck": true
	},
	"compileOnSave": true,
	"include": ["src"],
	"exclude": ["node_modules"]
}
